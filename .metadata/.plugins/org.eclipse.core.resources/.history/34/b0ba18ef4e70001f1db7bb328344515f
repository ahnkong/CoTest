package level1;

/*
 * 전체 예산 정해져있음.
 * 최대한 많은 부서에게 물품을 구매해주려고 함.
 * 신청한 금액은 정확하게 주어야 함 => 오케
 * 
 * 
 * */
public class d240911_예산 {
	public static void main(String[] args) {
//		int[] d = {1, 3, 2, 5, 4};
//		int budget = 9;
		//이거 실패..왜?
//		int[] d = {2,2,3,3};
//		int budget = 10;
		
		int[] d = {1,1,1,1,1};
		int budget = 10;
		
		
		int answer = 0;
		int temp = 0; 
		int cnt = 0;
		
		
			for(int i = 0; i < d.length ; i++) {
				temp += d[i];
				cnt++;
				System.out.println(i+1 + " 번째 : " + temp + " cnt는 " + cnt + "번");
				if(temp == budget) {
					answer = cnt;
				} else if(temp > budget) {
					answer = cnt-1;
					break;
				}
			}
		System.out.println(answer);
	}
	
}
