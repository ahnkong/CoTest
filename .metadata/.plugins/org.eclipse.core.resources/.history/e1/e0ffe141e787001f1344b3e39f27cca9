package level1;

import java.util.Iterator;

// 결국 아스키 코드 문제 
public class d241011_시저암호 {
	public static void main(String[] args) {
		
		
		String s = "AB";
		int n = 1;
		
        String answer = "";  // 결과를 저장할 변수
        
        // 반복문: 문자열의 각 문자를 하나씩 처리
        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);  // i번째 문자 가져오기
            
            // 대문자 범위 처리: 'A' ~ 'Z'
            if (ch >= 'A' && ch <= 'Z') {
                ch = (char) ('A' + (ch - 'A' + n) % 26); // 대문자 시저 암호 적용
            }
            // 소문자 범위 처리: 'a' ~ 'z'
            else if (ch >= 'a' && ch <= 'z') {
                ch = (char) ('a' + (ch - 'a' + n) % 26); // 소문자 시저 암호 적용
            }
            
            // 변환된 문자를 answer에 누적
            answer += ch;
        }
        
        // 결과 출력
        System.out.println(answer);
	}
}
