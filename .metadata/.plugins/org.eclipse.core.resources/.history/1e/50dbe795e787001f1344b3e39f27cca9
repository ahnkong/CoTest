package level1;

import java.util.Iterator;

// 결국 아스키 코드 문제 
public class d241011_시저암호 {
	public static void main(String[] args) {
		
		//테스트 코드1
//		String s = "AB";
//		int n = 1;

		
		// 테스트 코드2
		String s = "a B z";
		int n = 4;
		
		
        String answer = "";  // 결과를 저장할 변수
        
        // 반복문: 문자열의 각 문자를 하나씩 처리
        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);  // i번째 문자 가져오기
            

            if(ch >= 'A' && ch <= 'Z') {
            	ch += n;
            	if(ch > 'Z') {
            		ch -= 26;
            	}
            }
            
            if( ch >= 'a' && ch >= 'z') {
            	ch += n;
            	if(ch > 'z') {
            		ch -= 26;
            	}
            }
            	
            answer += ch;
        }
        
        // 결과 출력
        System.out.println(answer);
	}
}
