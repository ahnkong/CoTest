package level1;

public class 부족한금액계산하기 {
	
	public static void main(String[] args) {
	
		int price = 3; 
		int money = 20;
		int count = 4;
		int sum = 0;
		
		
		long answer = 0;
		
		for ( int i = 0; i <= count ; i++ ) {
			sum = sum + price*i;
			answer = sum - money;
			
//			if (answer <= 0) {
//				answer = 0;
//				break;
//			} 	
		}
		
		
		System.out.println(answer);
	
	}	
	
	
}
