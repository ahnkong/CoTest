package gabia;

import java.util.Arrays;
import java.util.Iterator;

public class egg {
	public static void main(String[] args) {

		int N = 5;
		int[] E = { 1, 1, 1, 5, 5 };
		int D = 40;
		int weeks2 = 14; // chick
		int weeks4 = 28; // chicken
		int weeks6 = 42; // bigChicken
		int day = 0;
		int girl = 0; // 여
		int boy = 0; // 남

		int[] answer = new int[2];
		int chick = 0;
		System.out.println(Arrays.toString(E));
//		Arrays.sort(E);
		for (int i = 0; i < E.length; i++) {
			System.out.println(i + "차 성장");
			for (int j = 1; j < answer.length; j++) {
				day = weeks2 - E[E.length - 1];
				E[i] = E[i] + day;
				System.out.println("닭장 : " + Arrays.toString(E));
				if (E[i] >= weeks2) {
					chick++; 
					System.out.println("부화한 병아리 : " + chick);
				}
				if (chick % 2 == 0) {
					int add = chick / 2;
					answer[0] += add;
					answer[1]+= add;
				} else {
					int add = chick / 2;
					answer[0] += add + 1;
					answer[1] += add;
				}
				System.out.println(Arrays.toString(answer));

			}
		}
	}
}
