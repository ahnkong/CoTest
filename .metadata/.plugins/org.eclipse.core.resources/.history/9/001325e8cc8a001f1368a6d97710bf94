package gabia;

import java.util.Arrays;
import java.util.Collection;
import java.util.Collections;
import java.util.HashMap;

public class 가비아코테 {
	public static void main(String[] args) {
		
		int n = 5;
		int[][] A = {{84,70}, {60, 55}, {56,86}, {73,90}, {94,58}};
		int answer = 0;
//		
//
//		
		int math = 0; //수학점수
		int en = 0; //영어점수
		int sum = 0;
//		int[] test = new int[5];
//		HashMap<Integer, Integer> score = new HashMap<>();
////		
////		
//		for (int i = 0; i <	A.length; i++) {
//				math = A[i][0];
//				en = A[i][1];
//				System.out.println(i + "+" + "   math는 : " + math + "    en는 : " + en);
//				test[i] += math+en;
//				score.put(test[i], math);
//				System.out.println(Arrays.toString(test));
//				System.out.println(score);
//			}

		Integer[][] sumScore = new Integer[A.length][3];
		for (int i = 0; i < A.length; i++) {
			math = A[i][0];
			en = A[i][1];			
			sum = math+en;
			sumScore[i][0] = sum;
			sumScore[i][1] = math;
			sumScore[i][2] = eng;

		}
		
		Arrays.sort(sumScore, (o1, o2) -> o2[0] - o1[0]);
		
		int mathMin = Integer.MAX_VALUE;
		int enMin = Integer.MAX_VALUE;
		

		
		for (int i = 0; i < 3; i++) {
			mathMin = Math.min(mathMin, sumScore[i][1]);
			enMin = Math.min(enMin, sumScore[i][2]);
		}
		
		int res = mathMin + enMin;
		
		System.out.println(res);
		
		}

		
	}
			
