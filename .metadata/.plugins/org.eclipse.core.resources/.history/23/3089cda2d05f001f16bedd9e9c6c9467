package level2;

public class 올바른괄호 {
	public static void main(String[] args) {
	       
//			boolean answer = true;
			String s = "()((())))())(";
			boolean res = true;
			
			
			char first = s.charAt(0);
			char end = s.charAt(s.length()-1);
			
			
			System.out.println(s.length());
//			System.out.println(first);
//			=> output )
			
			if(first == '(' && end == ')') {
				res =  true;
			} else {
				res = false;
			}
	       
			System.out.println(res);
			
	}
}
